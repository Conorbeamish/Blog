<% include partials/header %>

<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v4.0"></script>

<section class="blog">
    <h1><%= blog.title %></h1>

    <p>Written by <em><%=blog.author.username%></em> on <%=blog.date%>

    <div class="blog-options">
        <% if(currentUser && blog.author.id.equals(currentUser._id)){ %>
            <a id="edit" class="dark-link" href="/blog/<%=blog._id%>/edit">Edit</a>

            <form action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
                <button id="delete" class="dark-link  blog-button" >Delete</button>
            </form>
        <% } %>
    </div>

    <img class="blog-image" src = "<%=blog.image1%>">

    <p class="blog-text"> <%= blog.content %> </p>

    <img class="blog-image"  src = "<%=blog.image2%>">

    <div class="fb-comments" data-href="https://cb-blog-app.herokuapp.com/blog/<%=blog._id%>" data-width="" data-numposts="5"></div>
</section>


<% include partials/footer %>